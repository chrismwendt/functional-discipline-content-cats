{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ES5",
		"lib": ["dom", "dom.iterable", "esnext", "scripthost"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve"
	},
	"include": ["src"]
}
